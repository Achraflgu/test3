{
    "name": "msport/ecommerce-platform",
    "description": "E-Commerce Sports Platform - University Final Year Project",
    "type": "project",
    "keywords": ["ecommerce", "sports", "php", "postgresql"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "files": [
            "db_connection.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('env.example', '.env');\""
        ]
    }
}

